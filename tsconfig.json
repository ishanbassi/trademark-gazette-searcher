{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module":"es2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "knexfile.ts", "tests/puppeteer.test.mts", "utilities/imageCompressor.ts", "tests/imageCompression.test.ts"  ],
  "exclude": [
    "node_modules",
    
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
